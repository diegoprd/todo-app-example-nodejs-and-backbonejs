body
  font-family Helvetica, 'Lucida Grande'
  color app-gray
  background-color rgba(app-gray, .1)
  background url('images/background-1.jpg')
  background-repeat no-repeat
  padding-bottom 100px


.content-section
  box-sizing(border-box)
  margin auto
  margin-top 40px
  box-shadow(0 1px 2px 0 rgba(0, 0, 0, 0.22))
  background-color rgba(white, .3)
  width 800px
  border-radius(6px)
  padding-bottom 50px
  padding 20px

h2
  color #3498db
  margin 0
  margin-bottom 10px
  font-size 18px
  font-weight normal