.time-list
  margin-top 15px



  .time-item
    width 100%
    position relative
    box-shadow(0 1px 2px 0 rgba(0, 0, 0, 0.22))
    box-sizing(border-box)
    background-color white
    margin-bottom 3px
    padding 5px
    color white
    text-align center

    input.read-only
      border none
      color app-gray
      background-color transparent
      outline none
      box-shadow none
      text-align center

    a
      text-decoration none
      color app-light-blue

    .remove-time
      cursor pointer
      opacity 0
      color black
      position absolute
      right 10px
      top 12px
      transition opacity .5s

      &:hover
        color red

    .edit-time
      cursor pointer
      opacity 0
      color black
      position absolute
      left 10px
      top 12px
      transition opacity .5s

    .save-time
      position absolute
      top 12px
      right 60px
      // display inline-block
      width 10px

    &:hover
      .remove-time, .edit-time
        opacity 1

    .time-title
      color #646464
      margin 0px 45px

    .date
      margin-right 90px

    .distance
      margin-right 77px
      margin-right 77px